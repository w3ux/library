{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declarationDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "es2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["./**/*"],
}
